//output:profile.component.html
div.container
  div.row
    div.col-sm-6.col-md-4.col-md-offset-4
      h1.page-header Hello {{username}}
  


  div.row
    div.col-sm-6.col-md-4.col-md-offset-4
      h2 Change Password
      form.form-login(method="post")
        div.form-group
          label Old Password
          input.form-control(type="password", [(ngModel)]="passwordOld")
        div.form-group
          label New Password:
          input.form-control(type="password", [(ngModel)]="passwordNew")
        div.form-group
          label Repeat New Password:
          input.form-control(type="password", [(ngModel)]="passwordNewRepeat")
        button.btn.btn-success(type="submit", (click)="changePassword()") submit  
  
  div.row
    div.col-sm-6.col-md-4.col-md-offset-4
      h2 Change Email
      form.form-login(method="post")
        div.form-group
          label Email
          input.form-control(type="email", [(ngModel)]="email")
        div.form-group
          label Repeat Email
          input.form-control(type="email", [(ngModel)]="emailRepeat")
        button.btn.btn-success(type="submit", (click)="changeEmail()") submit 
      
