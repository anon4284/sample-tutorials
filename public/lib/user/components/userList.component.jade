//output:userList.component.html
div.container
  div.row
    ul.list-group(*ngFor="let user of users")
      li.list-group-item 
        img.img-responsive(src="{{user.profilePicture}}", width="50", height="50")
        h4 {{user.username}}
        div.btn-group.pull-right(role="group")
          button.btn.btn-secondary.btn-info(type="button") Chat
          button.btn.btn-secondary.btn-success(type="button") View
          button.btn.btn-secondary.btn-danger(*ngIf="isAdmin", type="button", (click)="delete(user.userID)") Delete
